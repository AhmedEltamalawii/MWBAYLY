<div class="row">
    <div class="col-9 mb-3">
          <h2> <a href="/Home/Index"<i class="bi bi-arrow-90deg-left"></i></a>All Products</h2>


    </div>
    <div class="col-3">
        <a href="/Product/CreateNew" type="button" class="btn btn-danger">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
    </div>
</div>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Rate</th>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                            <tr class="table-light">
                                <th scope="row">@item.Id</th>
                                     <td>@item.Name</td>
                                      <td>@item.Price</td>
                                     <td>@item.Rate</td>
                                             <td>@item.Category.Name</td>

                                     <td><!-- Update Button that triggers modal -->
                                    <a href="/Product/Edit?ProductId=@item.Id" type="button" class="btn btn-dark">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <!-- Delete Button that triggers modal -->
                                      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal" data-productid="@item.Id" data-productname="@item.Name">
                                        <i class="bi bi-trash3"></i> Delete
                                      </button>
                            @*   </button > *@
                                </td>
                            </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Structure -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete theProduct <strong id="categoryName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- This button will trigger the delete action -->
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript to handle the modal and set theProduct ID for deletion
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        varProductId = button.getAttribute('data-categoryid'); // Extract info from data-* attributes
        varProductName = button.getAttribute('data-categoryname');

        var modalBodyName = deleteModal.querySelector('#categoryName');
        var confirmDeleteBtn = deleteModal.querySelector('#confirmDeleteBtn');

        // Update the modal content
        modalBodyName.textContent =ProductName;
        // Set the delete link to the actual delete action URL
        confirmDeleteBtn.href = "/Product/Delete?categoryId=" +ProductId;
    });
</script>





