<div class="row">
    <div class="col-9 mb-3">
          <h2> <a href="/Home/Index"<i class="bi bi-arrow-90deg-left"></i></a>All Products</h2>


    </div>
    <div class="col-3">
        <a href="/Product/CreateNew" type="button" class="btn btn-danger">
            <i class="bi bi-plus-circle"></i> Create New Product
        </a>
    </div>
</div>
<form action="/Product/Index">
    <div class="row mb-3">
        <div class="col-4">
            <input type="text" class="form-control" placeholder="Search..." name="search">
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Rate</th>
                <th scope="col">Category Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                            <tr class="table-light">
                                <th scope="row">@item.Id</th>
                                     <td>@item.Name</td>
                                      <td>@item.Price</td>
                                     <td>@item.Rate</td>
                                             <td>@item.Category.Name</td>

                                     <td><!-- Update Button that triggers modal -->
                                    <a href="/Product/Edit?ProductId=@item.Id" type="button" class="btn btn-dark">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId="@item.Id"
                           class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete @item.Name ?');">
                            <i class="bi bi-trash3"></i> Delete
                        </a>

                            
                                </td>
                            </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Structure -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete theProduct <strong id="categoryName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- This button will trigger the delete action -->
                <a id="confirmDeleteBtn" href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">

            <!-- Previous -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search })">Previous</a>
            </li>

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = 1, search = ViewBag.Search })">1</a>
                    </li>
                    if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

               
                for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, search = ViewBag.Search })">@i</a>
                    </li>
                }
                
                if (endPage < ViewBag.TotalPages)
                {
                    if (endPage < ViewBag.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.TotalPages, search = ViewBag.Search })">@ViewBag.TotalPages</a>
                    </li>
                }
            }

            <!-- Next -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search })">Next</a>
            </li>
        </ul>
    </nav>
}


<script>
    // JavaScript to handle the modal and set theProduct ID for deletion
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        varProductId = button.getAttribute('data-categoryid'); // Extract info from data-* attributes
        varProductName = button.getAttribute('data-categoryname');

        var modalBodyName = deleteModal.querySelector('#categoryName');
        var confirmDeleteBtn = deleteModal.querySelector('#confirmDeleteBtn');

        // Update the modal content
        modalBodyName.textContent =ProductName;
        // Set the delete link to the actual delete action URL
        confirmDeleteBtn.href = "/Product/Delete?categoryId=" +ProductId;
    });
</script>





