@{
    ViewData["Title"] = "Payment Success";
}

<div class="container mt-5 text-center">
    <h1 class="text-success"><i class="bi bi-check-circle"></i> Payment Successful</h1>
    <p class="lead">Thank you for your purchase! Your payment was processed successfully.</p>

    <a href="/Home/Index" class="btn btn-primary mt-3">
        <i class="bi bi-box"></i> Back to Products
    </a>
</div>

@section Scripts {
    @if (TempData["success"] != null)
    {
        <script>
            toastr.success('@TempData["success"]');
        </script>
    }
}
