@section Scripts {

    <partial name="_NoteficationPartial.cshtml"></partial>
}
<div class="container-fluid bg-gradient py-5 text-white"
     style="background: linear-gradient(135deg, #0d6efd, #6610f2);">
    <div class="text-center">
        <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">
            ELSherif Stores
        </h1>
        <p class="lead mb-4 animate__animated animate__fadeInUp">
            Discover <span class="fw-bold text-warning">premium products</span>
            at unbeatable prices 🚀
        </p>
        <a href="/Home/Index" class="btn btn-warning btn-lg px-4 rounded-pill shadow">
            Shop Now <i class="bi bi-arrow-right-circle"></i>
        </a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4 d-flex mb-3">
                <div class="card" style="width: 18rem;">
                        <img src="~/images/images/@item.ImgUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <div class="row">
                            <h3 class="col-10">@item.Name</h3>
                                    <div class="col-2"> <span class="badge bg-warning text-dark">@item.Rate/5</span></div>
                        </div>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <p>Price:@item.Price</p>
                            <a href="/Home/Details/@item.Id" class="btn btn-primary">More details...</a>
                    </div>
                </div>
        </div>
    }
</div>








